#:kivy 2.0
#:import MDTopAppBar kivymd.uix.toolbar.MDTopAppBar
#:import dp kivy.metrics.dp
#:import get_color_from_hex kivy.utils.get_color_from_hex

# -------------------------
# Item da grade de livros
# -------------------------
<BookItem>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    padding: dp(8)
    spacing: dp(6)
    on_release: app.open_book_detail(root.book_id, root.title, root.authors, root.cover_url, root.page_count, root.description)

    canvas.before:
        Color:
            rgba: app.theme_cls.bg_light
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10, 10, 10, 10]

    FloatLayout:
        size_hint_y: None
        height: dp(140)

        AsyncImage:
            source: root.cover_url if root.cover_url else "data/logo/kivy-icon-256.png"
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}
            # CORREÇÃO: Usa a propriedade moderna 'fit_mode'
            fit_mode: "contain"

        MDIconButton:
            icon: "delete"
            pos_hint: {"right": 1, "top": 1}
            opacity: 1 if root.removable else 0
            disabled: not root.removable
            on_release: app.delete_book(root.book_id, root.title)

    MDLabel:
        text: root.title
        halign: 'center'
        theme_text_color: "Custom"
        text_color: get_color_from_hex("#f9ebd7") # Bege Páginas
        size_hint_y: None
        height: self.texture_size[1] + dp(10)
        font_name: "Poppins"
        bold: True
        font_size: "13sp"
        shorten: True
        max_lines: 2
        ellipsize: "end"


# --------------------------------------------
# Barra inferior fixa
# --------------------------------------------
<BottomButton@ButtonBehavior+AnchorLayout>:
    icon: "book"
    size_hint_x: .3333
    padding: 0
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
    MDIcon:
        icon: root.icon
        theme_text_color: "Custom"
        text_color: get_color_from_hex("#f9ebd7") # Bege Páginas
        size_hint: None, None
        size: dp(28), dp(28)

<BottomBar@BoxLayout>:
    orientation: "horizontal"
    size_hint_y: None
    height: dp(64)
    padding: 0
    spacing: 0
    canvas.before:
        Color:
            rgba: app.theme_cls.primary_color
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        Color:
            rgba: (*get_color_from_hex("#f9f0e1")[:3], 0.2) # Bege Caule com transparência
        Rectangle:
            pos: self.x + self.width / 3, self.y + dp(10)
            size: 1, self.height - dp(20)
        Rectangle:
            pos: self.x + self.width * 2 / 3, self.y + dp(10)
            size: 1, self.height - dp(20)


# ---------------
# ScreenManager
# ---------------
ScreenManager:
    MainScreen:
    GraphScreen:
    NotesScreen:
    BookDetailScreen:
    NoteDetailScreen:
    NoteEditorScreen:
    TimerScreen:


# ---------------
# Tela Principal
# ---------------
<MainScreen>:
    name: 'main_screen'
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: app.APP_BG_COLOR

        MDTopAppBar:
            title: "Roots"
            anchor_title: "center"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.on_back_from_search()]] if root.show_back else []

        MDBoxLayout:
            adaptive_height: True
            padding: dp(16)
            spacing: dp(8)
            MDTextField:
                id: input_field
                hint_text: "Adicione um livro..."
                mode: "rectangle"
                size_hint_x: 1
                on_text_validate: app.add_book_search(self.text)

            MDRaisedButton:
                text: "Buscar"
                on_release: app.add_book_search(input_field.text)

        ScrollView:
            GridLayout:
                id: books_grid
                cols: 2
                size_hint_y: None
                padding: dp(16)
                spacing: dp(10)
                height: self.minimum_height

        BottomBar:
            BottomButton:
                icon: "chart-bar"
                on_release: app.go_graph()
            BottomButton:
                icon: "note-text-outline"
                on_release: app.go_notes()
            BottomButton:
                icon: "timer-outline"
                on_release: app.go_timer()


# -----------------------
# Tela de GRÁFICOS
# -----------------------
<GraphScreen>:
    name: "graph_screen"
    MDBoxLayout:
        id: graph_layout_container
        orientation: "vertical"
        md_bg_color: app.APP_BG_COLOR
        
        MDTopAppBar:
            title: "Gráfico — Tempo de leitura"
            anchor_title: "center"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.go_home()]]
            right_action_items: [["share-variant", lambda *args: app.share_weekly_summary()]]


        ScrollView:
            MDBoxLayout:
                id: chart_time
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(8)
                padding: dp(16), dp(12)


# -----------------------
# Tela de ANOTAÇÕES
# -----------------------
<NotesScreen>:
    name: "notes_screen"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.APP_BG_COLOR

        MDTopAppBar:
            title: "Anotações"
            anchor_title: "center"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.go_home()]]

        AnchorLayout:
            size_hint_y: None
            height: dp(56)
            padding: dp(12), 0
            anchor_x: "center"
            anchor_y: "center"

            MDBoxLayout:
                adaptive_width: True
                adaptive_height: True
                spacing: dp(8)

                MDRaisedButton:
                    id: book_select_btn
                    text: root.notes_book_title
                    on_release: app.open_book_picker()

                MDRectangleFlatButton:
                    text: "Filtrar"
                    on_release: app.apply_notes_filter()

                MDRaisedButton:
                    text: "Criar anotação"
                    on_release: app.create_note_for_selected_book()

        ScrollView:
            do_scroll_x: False
            MDList:
                id: notes_list
                size_hint_y: None
                height: self.minimum_height
                padding: dp(16), 0, dp(16), 0


# -----------------------
# Tela do CRONÔMETRO
# -----------------------
<TimerScreen>:
    name: "timer_screen"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.APP_BG_COLOR

        MDTopAppBar:
            title: "Cronômetro de leitura"
            anchor_title: "center"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.go_home()]]

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(20)
            padding: dp(30)

            MDLabel:
                id: timer_label
                text: "00:00:00"
                halign: "center"
                font_style: "H3"
                theme_text_color: "Custom"
                text_color: get_color_from_hex("#f9ebd7")

            MDRaisedButton:
                text: "Iniciar"
                pos_hint: {"center_x": 0.5}
                on_release: app.start_timer()

            MDRaisedButton:
                text: "Parar"
                pos_hint: {"center_x": 0.5}
                on_release: app.stop_timer()

            MDRaisedButton:
                text: "Salvar tempo"
                pos_hint: {"center_x": 0.5}
                on_release: app.save_timer()


# -----------------------
# Tela de DETALHE do LIVRO
# -----------------------
<BookDetailScreen>:
    name: "detail_screen"
    book_id: ""
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.APP_BG_COLOR

        MDTopAppBar:
            id: detail_appbar
            title: (root.book_title[:42] + ("…" if root.book_title and len(root.book_title) > 42 else "")) if root.book_title else "Detalhe do livro"
            anchor_title: "center"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.go_home()]]
            right_action_items: [["dots-vertical", lambda *_: app.open_status_menu(detail_appbar)]]

        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: dp(16)
                spacing: dp(16)

                MDBoxLayout:
                    spacing: dp(16)
                    adaptive_height: True

                    AsyncImage:
                        source: root.cover_url if root.cover_url else "data/logo/kivy-icon-256.png"
                        size_hint: None, None
                        size: dp(110), dp(160)
                        fit_mode: "contain"

                    MDBoxLayout:
                        orientation: "vertical"
                        spacing: dp(8)
                        adaptive_height: True

                        MDLabel:
                            text: root.book_title if root.book_title else "-"
                            theme_text_color: "Custom"
                            text_color: get_color_from_hex("#f9ebd7")
                            bold: True
                            font_name: "Poppins"
                            font_size: "18sp"
                            shorten: True
                            max_lines: 2
                            size_hint_y: None
                            height: self.texture_size[1]
                            text_size: self.width, None

                        MDLabel:
                            text: root.authors if root.authors else "Autor desconhecido"
                            theme_text_color: "Custom"
                            text_color: get_color_from_hex("#f9f0e1")
                            font_size: "14sp"
                            shorten: True
                            max_lines: 1
                            size_hint_y: None
                            height: self.texture_size[1]

                        MDLabel:
                            text: f"Páginas: {root.page_count}" if root.page_count else "Páginas: -"
                            theme_text_color: "Custom"
                            text_color: get_color_from_hex("#f9f0e1")
                            font_size: "14sp"
                            size_hint_y: None
                            height: self.texture_size[1]

                        MDLabel:
                            text: f"Status: {app.status_ui(root.book_status)}"
                            theme_text_color: "Custom"
                            text_color: get_color_from_hex("#f9ebd7")
                            font_size: "14sp"
                            size_hint_y: None
                            height: self.texture_size[1]

                        MDBoxLayout:
                            id: progress_layout
                            orientation: "vertical"
                            spacing: dp(8)
                            adaptive_height: True
                            opacity: 0
                            size_hint_y: None
                            height: 0

                            MDLabel:
                                text: f"Progresso: {root.progress_percent} %"
                                theme_text_color: "Custom"
                                text_color: get_color_from_hex("#f9f0e1")
                                font_size: "13sp"
                                size_hint_y: None
                                height: self.texture_size[1]

                            MDProgressBar:
                                id: progress_bar
                                value: root.progress_percent
                                size_hint_y: None
                                height: dp(8)

                MDLabel:
                    text: app.clean_description(root.description) if root.description else "Sem descrição."
                    theme_text_color: "Custom"
                    text_color: get_color_from_hex("#f9ebd7")
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None

                MDSeparator:
                    id: separator
                    opacity: 0
                    height: 0

                MDBoxLayout:
                    spacing: dp(10)
                    adaptive_height: True

                    MDRaisedButton:
                        text: "Adicionar à biblioteca"
                        disabled: root.already_added
                        on_release: app.save_from_detail()

                    MDRaisedButton:
                        text: "Atualizar progresso"
                        disabled: not root.already_added
                        on_release: app.prompt_update_progress()


# -----------------------
# Tela de DETALHE da ANOTAÇÃO
# -----------------------
<NoteDetailScreen>:
    name: "note_detail"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.APP_BG_COLOR

        MDTopAppBar:
            title: root.book_title if root.book_title else "Anotação"
            anchor_title: "center"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.go_notes()]]

        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: dp(16)
                spacing: dp(12)

                MDLabel:
                    text: root.note_text if root.note_text else "-"
                    theme_text_color: "Custom"
                    text_color: get_color_from_hex("#f9ebd7")
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None

                MDBoxLayout:
                    spacing: dp(10)
                    adaptive_height: True

                    MDRaisedButton:
                        text: "Editar"
                        on_release: app.open_note_editor(root.note_id)

                    MDRectangleFlatButton:
                        text: "Apagar"
                        on_release: app.delete_note_confirm(root.note_id)


# -----------------------
# Tela de EDIÇÃO da ANOTAÇÃO
# -----------------------
<NoteEditorScreen>:
    name: "note_editor"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.APP_BG_COLOR

        MDTopAppBar:
            title: "Editar anotação" if root.note_id else "Nova anotação"
            anchor_title: "center"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.go_notes()]]

        MDBoxLayout:
            orientation: "vertical"
            padding: dp(16)
            spacing: dp(12)

            MDLabel:
                text: f"Livro: {root.book_title if root.book_title else 'Sem livro'}"
                theme_text_color: "Custom"
                text_color: get_color_from_hex("#f9f0e1")
                size_hint_y: None
                height: self.texture_size[1]

            MDTextField:
                id: editor_text
                hint_text: "Escreva sua anotação..."
                mode: "rectangle"
                multiline: True
                helper_text_mode: "on_focus"
                size_hint_y: None
                height: dp(300)
                text: root.note_text

            MDBoxLayout:
                adaptive_height: True
                spacing: dp(10)

                MDRaisedButton:
                    text: "Salvar"
                    on_release: app.save_note_from_editor()

                MDRectangleFlatButton:
                    text: "Cancelar"
                    on_release: app.go_notes()
