#:kivy 2.0
#:import MDTopAppBar kivymd.uix.toolbar.MDTopAppBar

<BookItem>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    padding: dp(8)
    spacing: dp(6)
    on_release: app.open_book_detail(root.book_id, root.title, root.authors, root.cover_url, root.page_count, root.description)
    ripple_behavior: True

    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10,]

    FloatLayout:
        size_hint_y: None
        height: dp(140)

        AsyncImage:
            source: root.cover_url if root.cover_url else "data/logo/kivy-icon-256.png"
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}

        MDIconButton:
            icon: "delete"
            pos_hint: {"right": 1, "top": 1}
            opacity: 1 if root.removable else 0
            disabled: not root.removable
            on_release: app.delete_book(root.book_id, root.title)

    MDLabel:
        text: root.title
        halign: 'center'
        theme_text_color: "Primary"
        size_hint_y: None
        height: self.texture_size[1] + dp(10)
        font_style: "Caption"
        shorten: True
        max_lines: 2
        ellipsize: "end"


ScreenManager:
    MainScreen:
    GraphScreen:
    NotesScreen:
    BookDetailScreen:

<MainScreen>:
    name: 'main_screen'
    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Roots"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.on_back_from_search()]] if root.show_back else []

        MDBoxLayout:
            adaptive_height: True
            padding: dp(16)

            MDTextField:
                id: input_field
                hint_text: "Adicione um livro..."
                mode: "rectangle"
                on_text_validate: app.add_book_search(self.text)
                size_hint_x: 1

        ScrollView:
            GridLayout:
                id: books_grid
                cols: 2
                size_hint_y: None
                padding: dp(16)
                spacing: dp(10)
                height: self.minimum_height

        # ---- Rodapé com 2 botões ----
        MDBoxLayout:
            size_hint_y: None
            height: dp(64)
            padding: dp(12)
            spacing: dp(12)

            MDRaisedButton:
                text: "Gráfico de leitura"
                icon: "chart-line"
                on_release: app.go_graph()
                md_bg_color: app.theme_cls.primary_color
                text_color: 1,1,1,1

            MDRaisedButton:
                text: "Anotações"
                icon: "notebook"
                on_release: app.go_notes()
                md_bg_color: app.theme_cls.primary_color
                text_color: 1,1,1,1


<GraphScreen>:
    name: 'graph_screen'
    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Gráfico de leitura"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.go_home()]]

        MDBoxLayout:
            id: chart_box
            padding: dp(16)
            spacing: dp(8)
            orientation: 'vertical'


<NotesScreen>:
    name: 'notes_screen'
    notes_book_id: ""
    notes_book_title: "Selecionar livro"

    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Anotações"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.go_home()]]

        MDBoxLayout:
            padding: dp(16)
            spacing: dp(8)
            orientation: 'vertical'

            MDBoxLayout:
                adaptive_height: True
                spacing: dp(8)

                MDRaisedButton:
                    id: book_select_btn
                    text: root.notes_book_title
                    on_release: app.open_book_picker()

                MDTextField:
                    id: note_input
                    hint_text: "Escreva uma anotação..."
                    multiline: True
                    size_hint_x: 1

                MDRaisedButton:
                    text: "Salvar"
                    on_release: app.save_note_from_ui()

            ScrollView:
                MDList:
                    id: notes_list


<BookDetailScreen>:
    name: 'detail_screen'
    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Detalhes do livro"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.go_home()]]

        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                padding: dp(16)
                spacing: dp(12)
                adaptive_height: True

                AsyncImage:
                    source: root.cover_url if root.cover_url else "data/logo/kivy-icon-256.png"
                    size_hint_y: None
                    height: dp(220)

                MDLabel:
                    text: root.book_title
                    font_style: "H1"
                    halign: "center"
                    size_hint_y: None
                    text_size: self.width, None
                    height: self.texture_size[1]

                MDLabel:
                    text: root.authors
                    theme_text_color: "Secondary"
                    halign: "center"
                    size_hint_y: None
                    text_size: self.width, None
                    height: self.texture_size[1]

                MDLabel:
                    text: f"{root.page_count} páginas" if root.page_count else ""
                    halign: "center"
                    size_hint_y: None
                    text_size: self.width, None
                    height: self.texture_size[1]

                Widget:
                    size_hint_y: None
                    height: dp(8)

                MDRaisedButton:
                    text: "Adicionar"
                    pos_hint: {"center_x": 0.5}
                    size_hint_y: None
                    height: dp(0) if root.already_added else dp(48)
                    opacity: 0 if root.already_added else 1
                    disabled: root.already_added
                    on_release: app.save_from_detail()
