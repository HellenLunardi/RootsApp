#:kivy 2.0
#:import MDTopAppBar kivymd.uix.toolbar.MDTopAppBar

# -------------------------
# Item da grade de livros
# -------------------------
<BookItem>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    padding: dp(8)
    spacing: dp(6)
    on_release: app.open_book_detail(root.book_id, root.title, root.authors, root.cover_url, root.page_count, root.description)

    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10, 10, 10, 10]

    FloatLayout:
        size_hint_y: None
        height: dp(140)

        AsyncImage:
            source: root.cover_url if root.cover_url else "data/logo/kivy-icon-256.png"
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}
            allow_stretch: True
            keep_ratio: True

        MDIconButton:
            icon: "delete"
            pos_hint: {"right": 1, "top": 1}
            opacity: 1 if root.removable else 0
            disabled: not root.removable
            on_release: app.delete_book(root.book_id, root.title)

    MDLabel:
        text: root.title
        halign: 'center'
        theme_text_color: "Primary"
        size_hint_y: None
        height: self.texture_size[1] + dp(10)
        font_name: "Poppins"
        bold: True
        font_size: "13sp"
        shorten: True
        max_lines: 2
        ellipsize: "end"


# --------------------------------------------
# Barra inferior fixa com dois botões (ícones)
# --------------------------------------------
<BottomButton@ButtonBehavior+AnchorLayout>:
    icon: "book"
    size_hint_x: .5
    padding: 0
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
    MDIcon:
        icon: root.icon
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        size_hint: None, None
        size: dp(28), dp(28)

<BottomBar@BoxLayout>:
    orientation: "horizontal"
    size_hint_y: None
    height: dp(64)
    padding: 0
    spacing: 0
    canvas.before:
        Color:
            rgba: app.theme_cls.primary_color
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        Color:
            rgba: 1, 1, 1, .2
        Rectangle:
            pos: self.center_x - 0.5, self.y + dp(10)
            size: 1, self.height - dp(20)


# ---------------
# ScreenManager
# ---------------
ScreenManager:
    MainScreen:
    GraphScreen:
    NotesScreen:
    BookDetailScreen:
    NoteDetailScreen:
    NoteEditorScreen:


# ---------------
# Tela Principal
# ---------------
<MainScreen>:
    name: 'main_screen'
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: app.APP_BG_COLOR

        MDTopAppBar:
            title: "Roots"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.on_back_from_search()]] if root.show_back else []

        MDBoxLayout:
            adaptive_height: True
            padding: dp(16)
            MDTextField:
                id: input_field
                hint_text: "Adicione um livro..."
                mode: "rectangle"
                size_hint_x: 1
                on_text_validate: app.add_book_search(self.text)

            MDIconButton:
                icon: "magnify"
                on_release: app.add_book_search(input_field.text)

        ScrollView:
            GridLayout:
                id: books_grid
                cols: 2
                size_hint_y: None
                padding: dp(16)
                spacing: dp(10)
                height: self.minimum_height

        BottomBar:
            BottomButton:
                icon: "chart-bar"
                on_release: app.root.current = "graph_screen"
            BottomButton:
                icon: "note-text-outline"
                on_release: app.root.current = "notes_screen"


# -----------------------
# Tela de GRÁFICOS
# -----------------------
<GraphScreen>:
    name: "graph_screen"
    BoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Gráficos"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.go_home()]]

        AnchorLayout:
            anchor_y: "top"
            padding: dp(16)

            MDBoxLayout:
                id: chart_box
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(8)


# -----------------------
# Tela de ANOTAÇÕES
# -----------------------
<NotesScreen>:
    name: "notes_screen"
    BoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Anotações"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.go_home()]]

        # Barra de ações centralizada no topo
        AnchorLayout:
            size_hint_y: None
            height: dp(56)
            padding: dp(12), 0
            anchor_x: "center"
            anchor_y: "center"

            MDBoxLayout:
                adaptive_width: True     # ajusta a largura ao conteúdo
                adaptive_height: True
                spacing: dp(8)

                MDRaisedButton:
                    id: book_select_btn
                    text: root.notes_book_title
                    on_release: app.open_book_picker()

                MDRaisedButton:
                    text: "Filtrar"
                    on_release: app.apply_notes_filter()

                MDRaisedButton:
                    text: "Criar anotação"
                    on_release: app.create_note_for_selected_book()


        # Lista com scroll ocupando o restante
        ScrollView:
            do_scroll_x: False
            MDList:
                id: notes_list
                size_hint_y: None
                height: self.minimum_height
                padding: dp(16), 0, dp(16), 0



# -----------------------
# Tela de DETALHES DO LIVRO (sem alterações aqui)
# -----------------------
<BookDetailScreen>:
    name: 'detail_screen'
    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Detalhes do livro"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.go_home()]]

        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                padding: dp(16)
                spacing: dp(12)
                adaptive_height: True

                AsyncImage:
                    source: root.cover_url if root.cover_url else "data/logo/kivy-icon-256.png"
                    size_hint_y: None
                    height: dp(220)
                    fit_mode: "contain"

                MDLabel:
                    text: root.book_title
                    halign: "center"
                    size_hint_y: None
                    text_size: self.width, None
                    height: self.texture_size[1]
                    font_name: "Poppins"
                    bold: True
                    font_size: "24sp"

                MDLabel:
                    text: root.authors
                    theme_text_color: "Secondary"
                    halign: "center"
                    size_hint_y: None
                    text_size: self.width, None
                    height: self.texture_size[1]
                    font_name: "Inter"
                    italic: True
                    font_size: "14sp"

                MDLabel:
                    text: f"{root.page_count} páginas" if root.page_count else ""
                    halign: "center"
                    size_hint_y: None
                    text_size: self.width, None
                    height: self.texture_size[1]
                    font_name: "Inter"
                    font_size: "13sp"
                    theme_text_color: "Secondary"

                # Botão "Adicionar" (só quando ainda não salvo)
                MDRaisedButton:
                    text: "Adicionar"
                    pos_hint: {"center_x": 0.5}
                    size_hint_y: None
                    height: dp(0) if root.already_added else dp(48)
                    opacity: 0 if root.already_added else 1
                    disabled: root.already_added
                    on_release: app.save_from_detail()

                # ---- PROGRESSO + STATUS + BOTÃO ----
                MDCard:
                    orientation: 'vertical'
                    padding: dp(12)
                    spacing: dp(10)
                    size_hint_y: None
                    height: self.minimum_height
                    elevation: 0
                    md_bg_color: 0.97, 0.97, 0.97, 1

                    MDLabel:
                        text: "Progresso de leitura"
                        halign: "center"
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        font_name: "Poppins"
                        bold: True
                        font_size: "14sp"

                    MDProgressBar:
                        value: root.progress_percent
                        max: 100
                        size_hint_y: None
                        height: dp(6)

                    MDLabel:
                        text: f"páginas lidas: {root.pages_read}"
                        halign: "center"
                        size_hint_y: None
                        height: self.texture_size[1]
                        font_name: "Inter"
                        font_size: "14sp"

                    MDLabel:
                        text: f"{root.progress_percent}%"
                        halign: "center"
                        size_hint_y: None
                        height: self.texture_size[1]
                        font_name: "Inter"
                        bold: True
                        font_size: "16sp"

                    MDLabel:
                        text: "Status do livro"
                        halign: "center"
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]

                    AnchorLayout:
                        size_hint_y: None
                        height: dp(56)
                        anchor_x: "center"
                        anchor_y: "center"

                        MDGridLayout:
                            cols: 3
                            spacing: dp(16)
                            size_hint_y: None
                            height: dp(40)
                            adaptive_width: True

                            # Quero ler
                            MDBoxLayout:
                                size_hint: None, None
                                size: dp(120), dp(40)   # largura fixa evita loop
                                spacing: dp(6)
                                MDCheckbox:
                                    group: "status"
                                    disabled: not root.already_added
                                    active: root.book_status in ("Quero ler", "", None)
                                    on_active:
                                        if self.active: app.set_status_from_ui("Quero ler")
                                MDLabel:
                                    text: "Quero ler"
                                    valign: "middle"
                                    halign: "left"

                            # Lendo
                            MDBoxLayout:
                                size_hint: None, None
                                size: dp(90), dp(40)
                                spacing: dp(6)
                                MDCheckbox:
                                    group: "status"
                                    disabled: not root.already_added
                                    active: root.book_status == "Lendo"
                                    on_active:
                                        if self.active: app.set_status_from_ui("Lendo")
                                MDLabel:
                                    text: "Lendo"
                                    valign: "middle"
                                    halign: "left"

                            # Lido
                            MDBoxLayout:
                                size_hint: None, None
                                size: dp(80), dp(40)
                                spacing: dp(6)
                                MDCheckbox:
                                    group: "status"
                                    disabled: not root.already_added
                                    active: root.book_status in ("Lido", "Concluído")
                                    on_active:
                                        if self.active: app.set_status_from_ui("Lido")
                                MDLabel:
                                    text: "Lido"
                                    valign: "middle"
                                    halign: "left"


                    MDRaisedButton:
                        text: "Atualizar progresso"
                        pos_hint: {"center_x": 0.5}
                        size_hint_y: None
                        height: dp(44)
                        disabled: not root.already_added
                        on_release: app.prompt_update_progress()


# -----------------------
# Tela: Detalhe da Nota (visualizar texto completo)
# -----------------------
<NoteDetailScreen>:
    name: "note_detail"
    note_id: 0
    book_id: ""
    book_title: ""
    note_text: ""
    BoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: root.book_title if root.book_title else "Anotação"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.go_notes()]]
            right_action_items: [["pencil", lambda x: app.open_note_editor(root.note_id)], ["delete", lambda x: app.delete_note_confirm(root.note_id)]]

        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                padding: dp(16)
                adaptive_height: True
                MDLabel:
                    text: root.note_text
                    halign: "left"
                    size_hint_y: None
                    text_size: self.width, None
                    height: self.texture_size[1]


# -----------------------
# Tela: Editor de Nota (criar/editar)
# -----------------------
<NoteEditorScreen>:
    name: "note_editor"
    note_id: 0
    book_id: ""
    book_title: ""
    note_text: ""
    BoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Editar anotação" if root.note_id else "Nova anotação"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.go_notes()]]

        MDBoxLayout:
            orientation: "vertical"
            padding: dp(16)
            spacing: dp(12)

            MDLabel:
                text: root.book_title if root.book_title else "Sem livro selecionado"
                theme_text_color: "Secondary"
                halign: "left"
                size_hint_y: None
                height: self.texture_size[1]

            MDTextField:
                id: editor_text
                hint_text: "Escreva sua anotação..."
                multiline: True
                mode: "rectangle"
                size_hint_y: None
                height: dp(300)
                text: root.note_text

            MDRaisedButton:
                text: "Salvar"
                pos_hint: {"center_x": 0.5}
                on_release: app.save_note_from_editor()
