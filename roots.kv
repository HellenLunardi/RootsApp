# Gerencia as telas do app
<RootScreenManager@ScreenManager>:
    MainScreen:

# Tela Principal
<MainScreen@Screen>:
    name: 'main_screen'

    # layout principal que organiza os elementos em coluna
    BoxLayout:
        orientation: 'vertical'

        # 1. Barra de pesquisa no topo:
        MDBoxLayout:
            adaptive_height: True
            padding: dp(16)

            MDTextField:
                id: search_input
                mode: "round"
                hint_text: "Adicionar livro..."
                on_text_validate: app.add_book(self.text)
                on_focus: self.hint_text = "" if self.focus else "Adicionar livro..."
                icon_right: "magnify"
                icon_right_on_focus: "magnify"